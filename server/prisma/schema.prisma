generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  email
  google
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String?
  displayName   String?
  provider      AuthProvider @default(email)
  googleId      String?      @unique
  profilePicture String?
  tokenVersion  Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  wallets       WalletAddress[]
  watchlist     WatchlistItem[]
  messages      Message[]
  pushTokens    PushToken[]
  priceAlerts   PriceAlert[]
  chatThreads   ChatThread[]
  portfolioSnapshots PortfolioSnapshot[]
}

model WalletAddress {
  id        String   @id @default(cuid())
  userId    String
  chain     String
  address   String
  label     String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  tokenId   String
  addedAt   DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  body      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([roomId])
}

enum Platform {
  ios
  android
  web
}

model PushToken {
  id        String   @id @default(cuid())
  userId    String
  expoToken String   @unique
  platform  Platform
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model PriceAlert {
  id        String   @id @default(cuid())
  userId    String
  tokenId   String
  condition String   // "above" | "below"
  price     Float
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model ChatThread {
  id        String    @id @default(cuid())
  userId    String
  title     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  ChatMessage[]
  @@index([userId])
}

model ChatMessage {
  id        String     @id @default(cuid())
  threadId  String
  role      String     // "user" | "assistant"
  content   String
  createdAt DateTime   @default(now())

  thread    ChatThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  @@index([threadId])
}

model PortfolioSnapshot {
  id        String   @id @default(cuid())
  userId    String
  address   String
  chain     String
  totalUsd  Float
  change24h Float
  data      Json     // Store holdings array
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId, address])
  @@index([createdAt])
}

