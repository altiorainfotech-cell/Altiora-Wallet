generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  email
  google
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String?
  displayName   String?
  provider      AuthProvider @default(email)
  googleId      String?      @unique
  profilePicture String?
  tokenVersion  Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  wallets       WalletAddress[]
  watchlist     WatchlistItem[]
  messages      Message[]
  pushTokens    PushToken[]
}

model WalletAddress {
  id        String   @id @default(cuid())
  userId    String
  chain     String
  address   String
  label     String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  tokenId   String
  addedAt   DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  body      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([roomId])
}

enum Platform {
  ios
  android
  web
}

model PushToken {
  id        String   @id @default(cuid())
  userId    String
  expoToken String   @unique
  platform  Platform
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

